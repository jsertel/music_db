<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '', genre, class: 'fa fa-eye', alt: 'view' %></td>
        <td><%= link_to '', edit_genre_path(genre), class: 'fa fa-pencil', alt: 'edit' %></td>
        <td><%= link_to '', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash', alt: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path, class: 'btn    btn-success' %>
