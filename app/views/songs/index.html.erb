<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist.name %></td>
        <td><%= song.artist.genre.name %></td>
        <td><%= link_to '', song, class: 'fa fa-eye', alt: 'view' %></td>
        <td><%= link_to '', edit_song_path(song), class: 'fa fa-pencil', alt: 'edit' %></td>
        <td><%= link_to '', song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash', alt: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path, class: 'btn btn-success' %>
